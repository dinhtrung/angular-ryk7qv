{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "target": "es5",
    "module": "es2015",
    "types": [],
    "paths": {
      "@app/*": [
        "apps/*"
      ],
      "@core/*": [
        "apps/core/*"
      ],      
      "@core/": [
        "apps/core/"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}

